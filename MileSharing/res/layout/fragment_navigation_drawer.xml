<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_notsotransparent" >
    <ImageView android:layout_width="45dp"
                 android:id="@+id/passButton"
                 android:scaleType="fitCenter"
                 android:src="@drawable/pass_icon"
                 android:layout_height="50dp"/>
    <ImageView android:layout_width="50dp"
               android:layout_marginTop="10dp"
                 android:id="@+id/driverButton"
                 android:scaleType="fitCenter"
                 android:layout_marginRight="3dp"
                 android:layout_marginLeft="3dp"
                 android:layout_below="@+id/passButton"
                 android:src="@drawable/driver_icon"
                 android:layout_height="50dp"/>
    <View android:layout_width="5dp"
          android:id="@+id/divider"
          android:background="@android:color/black"
          android:layout_toRightOf="@+id/driverButton"
          android:layout_height="match_parent"/>
    <ListView
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/menuList"
              android:layout_toRightOf="@+id/divider"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:choiceMode="singleChoice"
              android:divider="@android:color/black"
              android:dividerHeight="5dp"
              android:layout_above="@+id/divider2"
              tools:context="com.soloway.transport.milesharing.NavigationDrawerFragment" />
    <View android:layout_width="match_parent"
          android:id="@+id/divider2"
          android:layout_above="@+id/settings"
          android:background="@android:color/black"
          android:layout_toRightOf="@+id/divider"
          android:layout_height="5dp"/>
    <TextView android:layout_width="match_parent"
              android:id="@+id/settings"
              android:gravity="center"
              android:layout_above="@+id/divider3"
              android:layout_toRightOf="@+id/divider"
              android:textColor="@android:color/white"
              android:textSize="18sp"
              android:paddingTop="10dp"
              android:text="@string/settings"
              android:paddingBottom="10dp"
              android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:id="@+id/divider3"
          android:background="@android:color/black"
          android:layout_alignParentBottom="true"
          android:layout_toRightOf="@+id/divider"
          android:layout_height="5dp"/>
</RelativeLayout>
